<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.administrator.ui.main.AdminEditPatientFragment"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:id="@+id/edit_patient_info_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:text="name"
        android:background="#E3AA"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:weightSum="7.5">

        <TableRow
            android:layout_weight="1"
            android:weightSum="5">

            <TextView
                android:text="Date of birth"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_line"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/edit_patient_info_dob"
                android:text="02/10/2001"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/table_line"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">

            <TextView
                android:text="Address"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_line"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_patient_info_address"
                android:hint="Address.."
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/table_line"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">

            <TextView
                android:text="Zipcode"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_line"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/edit_patient_info_zip_code"
                android:hint="Zipcode.."
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/table_line"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">

            <TextView
                android:text="Place of residence"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_line"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/edit_patient_info_place_of_residence"
                android:hint="Place of residence.."
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/table_line"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">

            <TextView
                android:text="Insurance Number"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_line"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/edit_patient_info_insurance_number"
                android:hint="Insurance Number.."
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/table_line"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">

            <TextView
                android:text="Insurance Company"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_line"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/edit_patient_info_health_insurance_company"
                android:hint="Insurance Company.."
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/table_line"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">

            <TextView
                android:text="Admission Date"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_line"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/admission_date"
                android:text="24/12/2022"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/table_line"/>
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/save_info_button"
        android:text="Save"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/discharge_button"
        android:text="Discharge Patient"/>

</LinearLayout>