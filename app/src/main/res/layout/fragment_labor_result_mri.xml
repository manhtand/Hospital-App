<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.service.labor.ui.main.LaborResultMRIFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/labor_result_mri_insert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Insert Result" />
        <Button
            android:id="@+id/labor_result_mri_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Save Result" />
    </LinearLayout>

    <ImageView
        android:id="@+id/labor_result_mri_image"
        android:layout_width="400dp"
        android:layout_height="200dp"
        tools:src="@tools:sample/avatars" />

</LinearLayout>